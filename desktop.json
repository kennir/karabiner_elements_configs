{
  "title": "Switch desktop with mouse buttons 4,5",
  "rules": [
    {
      "description": "Maps cmd + button 5 to expose, cmd + 4 to app list",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "mandatory": [
                "left_gui"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": "left_control"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "mandatory": [
                "left_gui"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": "left_control"
            }
          ]
        }
      ]
    }
  ]
}
