{
  "title": "CapsLock to Hyper",
  "rules": [
    {
      "description": "capslock = switch ime(click) | hyper(hold)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f18"
            }
          ]
        }
      ]
    },
    {
      "description": "held down opt key = capslock",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_alt",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_alt"
            }
          ],
          "to_if_held_down": [
            {
              "key_code":    "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
